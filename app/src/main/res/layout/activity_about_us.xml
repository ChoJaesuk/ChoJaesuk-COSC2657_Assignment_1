<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"> <!-- Center align content -->

        <!-- Title -->
        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="About Us"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_app_logo" />

        <!-- App Description -->
        <TextView
            android:id="@+id/aboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:text="'DrawYourMind' is an app designed to help you explore your inner self through drawing-based psychological tests. By creating simple drawings, users can express their emotions and gain a deeper understanding of their psychological state."
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

        <!-- Mission Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/missionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Our Mission"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/missionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="- Promoting mental health\n- Reducing stress\n- Helping users gain a deeper understanding of their emotions"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- About Me Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/aboutMeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="About Me"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Developer Photo -->
            <ImageView
                android:id="@+id/developerPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_image_background"
                android:contentDescription="Developer Photo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_developer_photo" />

            <!-- Developer Bio -->
            <TextView
                android:id="@+id/developerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Hello! My name is Jaeseok Cho, and I am a second-year student at RMIT University. For my first Android Development assignment, I developed an app called 'DrawYourMind'. I aimed to create an engaging and fun way for users to explore their psychological state by drawing, making the testing experience more interactive and insightful."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Contact Me"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Email: s3914532@rmit.edu.vn\nPersonal Email: rrr2913@naver.com"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
